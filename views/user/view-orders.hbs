<section>
    <div class="container">
        <table class="table mt-5" id="productsTable">
          <thead>
            <tr>
              <th scope="col">Date</th>
              <th scope="col">Address</th>
              <th scope="col">Pincode</th>
              <th scope="col">Mobile</th>
              <th scope="col">Payment</th>
              <th scope="col">Price</th>
              <th scope="col">Status</th>
            </tr>
          </thead>
          <tbody>
            {{#each orders}}
            <tr>
                <td scope="col">{{this.orderDate}}</td>
                <td scope="col">{{this.delivery.address}}</td>
                <td scope="col">{{this.delivery.pincode}}</td>
                <td scope="col">{{this.delivery.mobile}}</td>
                <td scope="col">{{this.paymentMethod}}</td>
                <td scope="col">{{this.price}}</td>
                <td scope="col">{{this.status}}</td>
                <td>
                    <a href="/view-order-products/{{this._id}}" class="btn btn-primary">View Products</a>
                </td>
        

            </tr>
            {{/each}}
          </tbody>
        </table>
    </div>
</section>
