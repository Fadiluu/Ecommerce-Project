<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto mb-4">Add Product</a>
        </div>
        <table class="table mt-5" id="productsTable">
          <thead>
            <tr>
              <th scope="col">Date</th>
              <th scope="col">Name</th>
              <th scope="col">Mobile</th>
              <th scope="col">Adrress</th>
              <th scope="col">Payment</th>
              <th scope="col">Status</th>
              <th scope="col">Price</th>
            </tr>
          </thead>
          <tbody>
            {{#each orders}}
            <tr>
                <td scope="col">{{this.orderDate}}</td>
                <td scope="col">{{this.userInfo.Name}}</td>
                <td scope="col">{{this.delivery.mobile}}</td>
                <td scope="col">{{this.delivery.address}}</td>
                <td scope="col">{{this.paymentMethod}}</td>
                <td scope="col">{{this.status}}</td>
                <td scope="col">{{this.price}}</td>

            </tr>
            {{/each}}
          </tbody>
        </table>
    </div>
</section>
